<section class="user-input-container">
  <header class="input-container">
    <nav>
      <ul class='links'>
        <li>
        <p><%= link_to "â†", splash_screens_index_path, class:'text-light text-decoration-none' %></p>
          
        <li>
        <li>
          LOGIN
        <li>
        <li class='login'>
          <input type="submit" value='Log in' form='form' class='submit'>
        </li>
      </ul>
    </nav>
  </header>
   <section class="form-section">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form', :id => 'form', data: { turbo: false } }) do |f| %>
    
  <%= render "users/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
    </div>
      <div class='field'>
        <input type="submit" value='Continue' id='submit-btn'>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
  </section>
</section>